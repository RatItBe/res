{
	"format_version": "1.10.0",
	"animation_controllers": {		
		"controller.animation.shotty.reloading": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"reload": "q.is_using_item"
						}
					]
				},
				"reload": {
					"animations": [
						"reload"
					],
					"transitions": [
						{
							"default": "!q.is_using_item || q.all_animations_finished"
						}
					]
				}
			}
		}
	}
}
